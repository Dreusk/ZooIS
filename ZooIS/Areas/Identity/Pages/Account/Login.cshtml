@page
@model LoginModel

@using ZooIS.Components

@{
    ViewData["Title"] = "Вход";
}

<h1>@ViewData["Title"]</h1>
<section>
    <form id="account" method="post">
        <hr />
        @if(!ModelState.IsValid) {
            <div asp-validation-summary="All" class="text-danger"></div>
        }
        <div class="w-25">
            <div class="form-group">
                <label asp-for="Input.Email" class="required"></label>
                <input asp-for="Input.Email" />
                <span asp-validation-for="Input.Email" class="text-danger d-block"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="required"></label>
                <input asp-for="Input.Password" />
                <span asp-validation-for="Input.Password" class="text-danger d-block"></span>
            </div>
            @await Component.InvokeAsync("Checkbox", new Checkbox.Params("Input.RememberMe")
            {
                Label = "Запомнить"
            })
            <div class="mb-4">
                <button type="submit">Войти</button>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
