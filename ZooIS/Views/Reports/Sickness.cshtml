@model SicknessParams

@{
    var ReportInput = (HierarchyCombobox.Params)ViewBag.ReportInput;
}

@using ZooIS.Components

<form method="GET" asp-action="Index">
	<div class="col-6">
		@await Component.InvokeAsync("HierarchyCombobox", ReportInput)
	</div>
</form>

<div class="col-6">
	<form method="POST">
		<div class="form-group">
			<label class="required" asp-for="Start"></label>
			<input asp-for="Start" />
			<span asp-validation-for="Start" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label class="required" asp-for="End"></label>
			<input asp-for="End" />
			<span asp-validation-for="End" class="text-danger"></span>
		</div>
		<div class="form-group">
			<button type="submit">Заказать</button>
		</div>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}