@using Microsoft.AspNetCore.Identity
@using ZooIS.Data
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    string returnUrl = Context.Request.Path.ToUriComponent();
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark no-select">@User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Выход</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark @if(ViewData["Title"].ToString() == "Вход"){@Html.Raw("font-weight-bold")}" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@returnUrl">Вход</a>
    </li>
}
</ul>
