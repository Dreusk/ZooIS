@model List<Log>

@using System.Globalization;

@{
    var Localization = new CultureInfo("ru-Ru");
}

<div>
    <h1 class="display-4 text-center">ЗууИС</h1>
    <p class="text-muted text-center">Мы ответствены за жизнь.</p>
    <h2 class="mt-4">Чем вы займетесь сегодня?</h2>
    <ul class="text-initial">
        @if (Model.Count > 0)
        {
            @foreach (Log log in Model)
            {
                <li>
                    <a href="@log.Url">@log.PageTitle - @log.ts.ToShortTimeString()</a>
                </li>
            }
        }
        else {
            <li>
                <div>Последние посещенные страницы отстуствуют...</div>
            </li>
        }
    </ul>
</div>
